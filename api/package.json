{
  "name": "trophy-scout",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/main.js",
    "dev": "npx tsx --watch src/main.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "npx prettier . --write",
    "types": "npx tsc --noemit",
    "check": "npm run lint && npm run types"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "openai": "^5.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.9",
    "eslint": "^9.18.0",
    "prettier": "3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
